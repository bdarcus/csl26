{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "defaultMode": "acceptEdits",
  "permissions": {
    "allow": [
      "Read(*)",
      "Search(*)",
      "Edit(*)",
      "Write(*)",
      
      "Bash(beans *)",
      "Bash(.beans)",
      "Bash(node *)",
      "Bash(bun *)",
      "Bash(deno *)",
      "Bash(git status)",
      "Bash(git checkout *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git push *)",
      "Bash(git pull *)",
      "Bash(git log *)",
      "Bash(git diff *)",
      "Bash(git show *)",
      "Bash(git mv *)",
      "Bash(git branch *)",
      "Bash(cargo *)",
      "Bash(gh pr *)",
      "Bash(gh api *)",
      "Bash(mkdir *)",
      "Bash(ls *)"
    ],
  "deny": [
      "Bash(rm -rf /*)",
      "Bash(sudo *)",
      "Bash(curl *)",
      "Bash(wget *)",
      "Bash(ssh *)"
    ]
  }
}
